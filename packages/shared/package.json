{
    "name": "@nestkhmer/shared",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "exports": {
        ".": "./src/index.ts",
        "./schemas": "./src/schemas/index.ts",
        "./db": "./src/db/schema.ts"
    },
    "scripts": {
        "lint": "echo 'no linter configured yet'",
        "typecheck": "tsc --noEmit",
        "db:pre-migrate": "npx tsx src/db/pre-migrate.ts",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "db:push": "drizzle-kit push",
        "db:seed": "npx tsx src/db/seed.ts"
    },
    "dependencies": {
        "better-auth": "^1.4.19",
        "drizzle-kit": "^0.30.0",
        "drizzle-orm": "^0.38.0",
        "postgres": "^3.4.0",
        "tsx": "^4.19.2",
        "zod": "^3.24.0"
    },
    "devDependencies": {
        "typescript": "^5.7.0"
    }
}